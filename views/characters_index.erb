<html>
  <body>
    <ul>
      <% @characters.each do |character| %>
          <li>
            <div><%= character.name %></div>
            <div>
              <img style="width: 50px; height: 50px;" src="/characters/<%= character.id %>/images/0"></img>
              <img style="width: 50px; height: 50px;" src="/characters/<%= character.id %>/images/1"></img>
              <img style="width: 50px; height: 50px;" src="/characters/<%= character.id %>/images/2"></img>
            </div>
          </li>
      <% end %>
    </ul>
    <a href="/characters/new">new character</a>
  </body>
</html>